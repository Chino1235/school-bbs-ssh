<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.zjut.po.BestTopic" table="best_topic" schema="school_bbs">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
            <generator class="identity"/>
        </id>
<!--        <property name="topicId">-->
<!--            <column name="topic_id" sql-type="int(11)"/>-->
<!--        </property>-->
<!--        <property name="userId">-->
<!--            <column name="user_id" sql-type="int(11)"/>-->
<!--        </property>-->
        <property name="createTime">
            <column name="create_time" sql-type="datetime" not-null="true"/>
        </property>
        <property name="state">
            <column name="state" sql-type="int(4)" not-null="true"/>
        </property>
        <many-to-one name="topicByTopicId" class="cn.edu.zjut.po.Topic">
            <column name="topic_id"/>
        </many-to-one>
        <many-to-one name="userByUserId" class="cn.edu.zjut.po.User">
            <column name="user_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>