<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.zjut.po.Reply" table="reply" schema="school_bbs">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
<!--        <property name="topicId">-->
<!--            <column name="topic_id" sql-type="int(11)"/>-->
<!--        </property>-->
<!--        <property name="userId">-->
<!--            <column name="user_id" sql-type="int(11)"/>-->
<!--        </property>-->
        <property name="content">
            <column name="content" sql-type="text" not-null="true"/>
        </property>
        <property name="replyTime">
            <column name="reply_time" sql-type="datetime" not-null="true"/>
        </property>
        <many-to-one name="topicByTopicId" class="cn.edu.zjut.po.Topic">
            <column name="topic_id"/>
        </many-to-one>
        <many-to-one name="userByUserId" class="cn.edu.zjut.po.User">
            <column name="user_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>