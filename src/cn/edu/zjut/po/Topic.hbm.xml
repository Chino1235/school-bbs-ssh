<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.zjut.po.Topic" table="topic" schema="school_bbs">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
<!--        <property name="sectionId">-->
<!--            <column name="section_id" sql-type="int(11)"/>-->
<!--        </property>-->
<!--        <property name="userId">-->
<!--            <column name="user_id" sql-type="int(11)"/>-->
<!--        </property>-->
        <property name="title">
            <column name="title" sql-type="varchar(255)"/>
        </property>
        <property name="content">
            <column name="content" sql-type="text"/>
        </property>
        <property name="createTime">
            <column name="create_time" sql-type="datetime" not-null="true"/>
        </property>
        <property name="updateTime">
            <column name="update_time" sql-type="datetime" not-null="true"/>
        </property>
        <property name="click">
            <column name="click" sql-type="int(11)"/>
        </property>
        <property name="replyNum">
            <column name="reply_num" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="int(11)" not-null="true"/>
        </property>
        <many-to-one name="subSectionBySectionId" class="cn.edu.zjut.po.SubSection">
            <column name="section_id"/>
        </many-to-one>
        <many-to-one name="userByUserId" class="cn.edu.zjut.po.User">
            <column name="user_id"/>
        </many-to-one>
        <set name="bestTopicsById" inverse="true">
            <key>
                <column name="topic_id"/>
            </key>
            <one-to-many not-found="ignore" class="cn.edu.zjut.po.BestTopic"/>
        </set>
        <set name="repliesById" inverse="true">
            <key>
                <column name="topic_id"/>
            </key>
            <one-to-many not-found="ignore" class="cn.edu.zjut.po.Reply"/>
        </set>
    </class>
</hibernate-mapping>