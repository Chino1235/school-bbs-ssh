<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.ccut.po.MainSection" table="main_section" schema="school_bbs">
        <id name="id" type="java.lang.Integer">
            <column name="id" sql-type="int(11)"/>
            <generator class="identity"/>
        </id>
        <property name="title" type="java.lang.String">
            <column name="title" sql-type="varchar(50)" length="50"/>
        </property>

        <property name="description" type="java.lang.String">
            <column name="info" length="255"/>
        </property>

        <set name="subSectionsById" inverse="true" cascade="all" lazy="false">
            <key>
                <column name="main_section_id"/>
            </key>
            <one-to-many not-found="ignore" class="cn.edu.ccut.po.SubSection"/>
        </set>
    </class>
</hibernate-mapping>