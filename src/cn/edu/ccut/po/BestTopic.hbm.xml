<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.ccut.po.BestTopic" table="best_topic" schema="school_bbs">
        <id name="id" type="java.lang.Integer">
            <column name="id" sql-type="int(11)"/>
            <generator class="identity"/>
        </id>

        <property name="createTime" type="timestamp">
            <column name="create_time" sql-type="datetime" not-null="true"/>
        </property>
        <property name="state" type="java.lang.Integer">
            <column name="state" sql-type="int(4)" not-null="true"/>
        </property>
        <many-to-one name="topicByTopicId" class="cn.edu.ccut.po.Topic" fetch="select" not-null="true" lazy="false">
            <column name="topic_id"/>
        </many-to-one>
        <many-to-one name="userByUserId" class="cn.edu.ccut.po.User" fetch="select" not-null="true" lazy="false">
            <column name="user_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>