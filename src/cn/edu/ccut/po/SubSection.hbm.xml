<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.ccut.po.SubSection" table="sub_section" schema="school_bbs">
        <id name="id" type="java.lang.Integer">
            <column name="id" sql-type="int(11)"/>
            <generator class="identity"/>
        </id>
        <property name="title" type="java.lang.String">
            <column name="title" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="description" type="java.lang.String">
            <column name="info" length="255"/>
        </property>
        <many-to-one name="mainSectionByMainSectionId" class="cn.edu.ccut.po.MainSection" fetch="select" not-null="true" lazy="false" >
            <column name="main_section_id"/>
        </many-to-one>
        <set name="topicsById" inverse="true" lazy="false" cascade="all">
            <key>
                <column name="section_id"/>
            </key>
            <one-to-many not-found="ignore" class="cn.edu.ccut.po.Topic"/>
        </set>
    </class>
</hibernate-mapping>