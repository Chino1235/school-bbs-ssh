<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.ccut.po.Topic" table="topic" schema="school_bbs">
        <id name="id" type="java.lang.Integer">
            <column name="id" sql-type="int(11)"/>
            <generator class="identity"/>
        </id>

        <property name="title" type="java.lang.String">
            <column name="title" sql-type="varchar(255)"/>
        </property>
        <property name="content" type="java.lang.String">
            <column name="content" sql-type="text" not-null="true"/>
        </property>
        <property name="createTime" type="timestamp">
            <column name="create_time" sql-type="datetime"/>
        </property>
        <property name="updateTime" type="timestamp">
            <column name="update_time" sql-type="datetime"/>
        </property>
        <property name="click" type="java.lang.Integer">
            <column name="click" sql-type="int(11)" check="true"/>
        </property>
        <property name="replyNum" type="java.lang.Integer">
            <column name="reply_num" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="type" type="java.lang.Integer">
            <column name="type" sql-type="int(11)" not-null="true"/>
        </property>
        <many-to-one name="subSectionBySectionId" class="cn.edu.ccut.po.SubSection" fetch="select" not-null="true" lazy="false">
            <column name="section_id"/>
        </many-to-one>
        <many-to-one name="userByUserId" class="cn.edu.ccut.po.User" fetch="select" not-null="true" lazy="false">
            <column name="user_id"/>
        </many-to-one>
        <set name="bestTopicsById" inverse="true" lazy="false" cascade="all">
            <key>
                <column name="topic_id"/>
            </key>
            <one-to-many not-found="ignore" class="cn.edu.ccut.po.BestTopic"/>
        </set>
        <set name="repliesById" inverse="true" lazy="false" cascade="all">
            <key>
                <column name="topic_id"/>
            </key>
            <one-to-many not-found="ignore" class="cn.edu.ccut.po.Reply"/>
        </set>
    </class>
</hibernate-mapping>